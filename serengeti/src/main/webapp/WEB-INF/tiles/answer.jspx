<!-- Kept this as a jspx example. -->

<jsp:root version="2.0"
    xmlns:jsp="http://java.sun.com/JSP/Page"
    xmlns:c="http://java.sun.com/jsp/jstl/core"
    xmlns:fn="http://java.sun.com/jsp/jstl/functions">

    <calculation>
        <op><c:out value="${op}" /></op>
        <x><c:out value="${x}" /></x>
        <y><c:out value="${y}" /></y>
        <result><c:out value="${result}" /></result>
    </calculation>
</jsp:root>
