        <constructor-arg ref="userService"/>
    </bean>

    <bean id="userService"
        class="com.playserengeti.service.UserService">
        <constructor-arg ref="userDao"/>
    </bean>

    <bean id="userDao"
        class="com.playserengeti.dao.UserDaoMockImpl">
    </bean>

    <bean id="userDeleteValidator"
